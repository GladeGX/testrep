import random

provoda_x = ['Красный', 'Синий', 'Зеленый', 'Желтый', 'Белый']
provoda = []
while provoda_x != []:
    vibor = random.randint(0, len(provoda_x) - 1)
    provoda.append(provoda_x[vibor])
    provoda_x.pop(vibor)

print(f'Есть бомба с 5 проводами: {provoda[0]},{provoda[1]},{provoda[2]},{provoda[3]},{provoda[4]}')
print('Только 1 провод...правильный. Вот что поможет тебе выбрать какой именно:')

pravilniy_provod = random.randint(0, 4)


def podskazka1():
    list1 = [0, 1, 2, 3, 4]
    list1.pop(pravilniy_provod)
    return random.choice(list1)


def podskazka2():
    if pravilniy_provod == 0:
        return 1
    elif pravilniy_provod >= 1 and pravilniy_provod < 4:
        num1 = random.randint(0,1)
        if num1 == 0:
            return pravilniy_provod -1
        elif num1 == 1:
            return pravilniy_provod +1
    elif pravilniy_provod == 4:
        return 3

def podskazka3():
    if pravilniy_provod == 0:
        return random.randint(2, len(provoda) - 1)
    elif pravilniy_provod == 1:
        return random.randint(3, len(provoda) - 1)
    elif pravilniy_provod == len(provoda) - 1:
        return random.randint(0, len(provoda) - 3)
    elif pravilniy_provod == len(provoda) - 2:
        return random.randint(0, len(provoda) - 4)
    else:
        num2 = random.randint(0,1)
        if num2 == 0:
            return random.randint(0, pravilniy_provod - 2)
        else:
            return random.randint(pravilniy_provod + 2, len(provoda) - 1)

podskazki = [f'{provoda[podskazka1()]} не тот', f'{provoda[podskazka2()]} рядом с правильным', f'{provoda[podskazka3()]} НЕ рядом с правильным' ]

print(random.choice(podskazki))

reshenie = input('Выбирай какой резать')
if reshenie == provoda[pravilniy_provod]:
    print('Тебе повезло')
else:
    print('Тебе не повезло')
